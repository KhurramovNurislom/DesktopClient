<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="720.0" prefWidth="750.0" style="-fx-background-color: #e4eaff;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controllers.KeysGenPageController">
    <children>

        <TextField fx:id="id_tfKeyName" layoutX="80.0" layoutY="150.0" prefHeight="30.0" prefWidth="200.0"
                   promptText="kalit nomi"/>

        <TextField fx:id="id_tfPassword" layoutX="80.0" layoutY="250.0" prefHeight="30.0" prefWidth="200.0"
                   promptText="parol"/>

        <Label layoutX="80.0" layoutY="110.0" text="Kalit nomi" textFill="#0f2a62">
            <font>
                <Font name="Arial" size="18.0"/>
            </font>
        </Label>

        <Label layoutX="80.0" layoutY="320.0" text="Parolni takrorlang" textFill="#0f2a62">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label layoutX="80.0" layoutY="210.0" text="Yopiq kalit uchun parol" textFill="#0f2a62">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>

        <TextField fx:id="id_tfPassword2" layoutX="80.0" layoutY="360.0" prefHeight="30.0" prefWidth="200.0"
                   promptText="parol"/>

        <JFXButton fx:id="id_btnGenerate" layoutX="120.0" layoutY="470.0" prefHeight="35.0" prefWidth="160.0"
                   style="-fx-background-color: #0F2A62;" text="Generatsiyalash" textFill="WHITE">
            <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" style="-fx-background-color: #ffffff;">
                    <image>
                        <Image url="@../../../../Check_green_icon.png"/>
                    </image>
                </ImageView>
            </graphic>
            <font>
                <Font name="Arial Bold" size="14.0"/>
            </font>
        </JFXButton>

        <Label layoutX="420.0" layoutY="110.0" prefHeight="30.0" prefWidth="177.0" text="MAVJUD KALITLAR:"
               textFill="#0f2a62">
            <font>
                <Font name="Arial Bold" size="18.0"/>
            </font>
        </Label>

        <VBox alignment="TOP_RIGHT" layoutX="380.0" layoutY="150.0" prefHeight="380.0" prefWidth="300.0">
            <children>

                <JFXListView fx:id="id_lvList" prefHeight="300.0" prefWidth="300.0"
                             style="-fx-background-color: #e4eadf;" verticalGap="10.0">
                    <VBox.margin>
                        <Insets bottom="20.0"/>
                    </VBox.margin>
                    <opaqueInsets>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </opaqueInsets>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXListView>

                <JFXButton fx:id="id_btnDel" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="35.0"
                           prefWidth="160.0" style="-fx-background-color: #0F2A62;" text="O'chirish" textFill="WHITE"
                           textOverrun="CENTER_ELLIPSIS">
                    <graphic>
                        <ImageView fitHeight="22.0" fitWidth="22.0" mouseTransparent="true">
                            <image>
                                <Image url="@../../../../del.png"/>
                            </image>
                            <cursor>
                                <Cursor fx:constant="DEFAULT"/>
                            </cursor>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="Arial Bold" size="14.0"/>
                    </font>
                </JFXButton>

            </children>
        </VBox>

    </children>
</Pane>
